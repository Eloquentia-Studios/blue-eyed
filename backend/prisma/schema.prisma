generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  username    String @unique
  displayName String
  email       String @unique
  password    String

  roles Role[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  id String @id @default(uuid())

  name        String  @unique
  description String?

  permissions Permission[]
  users       User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Permission {
  DELETE_USER
  INVITE_USER
  RESET_USER_PASSWORD
}

model Flag {
  name  String @unique
  value Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
